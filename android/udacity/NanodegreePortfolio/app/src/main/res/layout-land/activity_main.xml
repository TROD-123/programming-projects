<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/blue_grey_100"
    android:clickable="false">


    <!-- Titles and Headers -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/portfolio_title"
        android:id="@+id/portfolio_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/portfolio_author"
        android:id="@+id/portfolio_author"
        android:layout_below="@+id/portfolio_title"
        android:layout_centerHorizontal="true"/>


    <!-- Buttons -->

    <Button
        android:id="@+id/portfolio_appbutton1"
        android:text="@string/portfolio_app1"
        android:backgroundTint="@color/teal_500"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:onClick="launchMoviesApp"
        android:layout_below="@+id/portfolio_author"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/portfolio_appbutton2"
        android:text="@string/portfolio_app2"
        android:backgroundTint="@color/teal_500"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:onClick="launchScoresApp"
        android:layout_alignTop="@+id/porfolio_appbutton5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/portfolio_appbutton3"
        android:text="@string/portfolio_app3"
        android:backgroundTint="@color/teal_500"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:onClick="launchLibraryApp"
        android:layout_below="@+id/portfolio_appbutton2"
        android:layout_alignLeft="@+id/portfolio_appbutton2"
        android:layout_alignStart="@+id/portfolio_appbutton2" />

    <Button
        android:id="@+id/portfolio_appbutton4"
        android:text="@string/portfolio_app4"
        android:backgroundTint="@color/teal_500"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:onClick="launchBuildItBigger"
        android:layout_alignTop="@+id/portfolio_appbutton1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/porfolio_appbutton5"
        android:text="@string/portfolio_app5"
        android:backgroundTint="@color/teal_500"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:onClick="launchXYZ"
        android:layout_below="@+id/portfolio_appbutton4"
        android:layout_alignLeft="@+id/portfolio_appbutton4"
        android:layout_alignStart="@+id/portfolio_appbutton4" />

    <Button
        android:id="@+id/portfolio_appbutton6"
        android:text="@string/portfolio_app6"
        android:backgroundTint="@color/indigo_500"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:onClick="launchCapstone"
        android:layout_alignTop="@+id/portfolio_appbutton3"
        android:layout_alignLeft="@+id/porfolio_appbutton5"
        android:layout_alignStart="@+id/porfolio_appbutton5" />


    <!-- Footers -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/portfolio_copyright"
        android:id="@+id/portfolio_copyright"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/portfolio_version"
        android:id="@+id/portfolio_version"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>
